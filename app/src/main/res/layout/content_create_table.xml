<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.firstapp.tolani.myfirstapp.CreateTable"
    tools:showIn="@layout/activity_create_table">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next"
        android:textSize="25sp"
        android:onClick="onNextClicked"
        android:layout_alignTop="@+id/back"
        android:text="next"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:textSize="25dp"
        android:onClick="onLogoutClicked"
        android:layout_alignBottom="@+id/back"
        android:layout_alignTop="@+id/back"
        android:text="@string/logout"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:textSize="25dp"
        android:onClick="onBackClicked"
        android:layout_marginBottom="116dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/back" />

    <TextView
        android:text="Enter name of table: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tablename"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp"
        android:id="@+id/tabName"
        android:layout_alignParentEnd="true"
        android:textSize="24sp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/colno"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_above="@+id/next"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="88dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tablename"
        android:textSize="23sp"
        android:textAlignment="center"
        android:layout_marginBottom="65dp"
        android:layout_above="@+id/colno"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Enter the no. of columns: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/colno"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp"
        android:id="@+id/colNo"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/black"
        android:textSize="24sp" />


</RelativeLayout>
