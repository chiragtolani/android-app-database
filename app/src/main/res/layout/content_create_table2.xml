<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_create_table2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.firstapp.tolani.myfirstapp.CreateTable2"
    tools:showIn="@layout/activity_create_table2">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:textSize="25dp"
        android:onClick="onEntLogoutClicked"
        android:layout_marginBottom="117dp"
        android:layout_marginStart="12dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/entBack"
        android:text="@string/logout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/entBack"
        android:textSize="25dp"
        android:onClick="onEntBackClicked"
        android:layout_alignBaseline="@+id/logout"
        android:layout_alignBottom="@+id/logout"
        android:layout_centerHorizontal="true"
        android:text="@string/back" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cont"
        android:textSize="23sp"
        android:onClick="onContClicked"
        android:layout_marginEnd="6dp"
        android:text="continue"
        android:layout_alignBottom="@+id/entBack"
        android:layout_toStartOf="@+id/entBack" />

    <TextView
        android:text="Enter attribute name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attrname"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:layout_above="@+id/attrnam"
        android:layout_marginBottom="32dp"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/attrtype"
        android:textSize="24sp"
        android:layout_above="@+id/logout"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Enter attribute type:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attrtyp"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_above="@+id/attrtype"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginBottom="27dp"
        android:id="@+id/attrnam"
        android:layout_above="@+id/attrtyp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
